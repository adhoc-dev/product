<odoo>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="selling_price"/>
                <field name= "date_availability" string="Availability From"/>
                <field name="salesman"/>
                <field name="buyer"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="tags_ids" widget="many2many_tags"/>
                    <group>
                        <field name="postcode"/>
                        <field name="date_availability"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                        <field name= "best_price"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="name" string="Nombre" />
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="property_type_id" string="Propperty type"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area" string="Total Area(sqm)"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesman"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" string="Offer"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="expected_price"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter name="available" string="Available" domain="[('state','!=',['sold', 'canceled'])]"/>
            </search>
        </field>
    </record>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name"> Properties</field>
        <field name="res_model">estate.property</field>
    </record>
</odoo>